<Page x:Class="Quest.Views.QuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:Quest.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance {x:Type vm:QuestVM}, IsDesignTimeCreatable=False}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Morpheus;component/Themes/Light/Goldenrod/MSControls.Core.Implicit.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Name="UploadButton" 
                    Margin="15"
                    Click="UploadButton_OnClick"
                    Content="Upload Pick Events"
                    Width="200"
                    Height="50"/>
            <Button Name="DownloadButton"
                    Margin="15"
                    Click="DownloadButton_OnClick"
                    Content="Download Pick Events"
                    Width="200"
                    Height="50"/>
        </StackPanel>
    </Grid>
</Page>
