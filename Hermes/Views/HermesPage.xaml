                <UserControl Content="{Binding NotificationsView}"/>
            </TabItem>
            <TabItem Header="FAQ">
                <UserControl Content="{Binding FAQView}"/>
            </TabItem>
            <TabItem Header="Reporting">
                <UserControl Content="{Binding ReportingView}"/>
            </TabItem>
            <TabItem Header="Messaging"
                     IsEnabled="{Binding CanMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
