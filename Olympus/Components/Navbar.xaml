<UserControl x:Class="Olympus.Components.Navbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Olympus.Components"
             xmlns:Control="clr-namespace:Olympus.Components"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Control:DatabaseSelection Grid.Row="0" Grid.Column="0" Margin="0" Padding="0" VerticalAlignment="Top"/>
        <Control:UserHandler Grid.Row="0" Grid.Column="2" Margin="0" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        
        <Control:InventoryUpdater Grid.Row="1" Grid.Column="2"/>
        <Border BorderBrush="#055" BorderThickness=".5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,0,5,0">
            <Control:ProjectSelection/>
        </Border>
    </Grid>
</UserControl>
