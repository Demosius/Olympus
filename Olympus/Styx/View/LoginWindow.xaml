<Window x:Class="Olympus.Styx.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Olympus.Styx.View"
        mc:Ignorable="d"
        Background="{DynamicResource BackGroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Log In" SizeToContent="WidthAndHeight">
    
    <Window.CommandBindings>
        
    </Window.CommandBindings>
    
    <StackPanel Margin="10">
        <WrapPanel>
            <Label Content="_User" Target="{Binding ElementName=txtUser}"/>
            <Label>
                <TextBlock FontSize="12" FontWeight="Light" FontStyle="Italic">(employee number)</TextBlock>
            </Label>
        </WrapPanel>
        <TextBox Name="TxtUser"/>
        <Label Target="{Binding ElementName=txtPassword}">_Password</Label>
        <PasswordBox Name="PwdPassword"/>
        <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Right">
            <Button IsCancel="True">_Cancel</Button>
            <Button IsDefault="True" Name="btnLogIn">_Log In</Button>
        </StackPanel>
    </StackPanel>
</Window>
