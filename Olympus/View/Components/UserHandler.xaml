<UserControl x:Class="Olympus.View.Components.UserHandler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Olympus.View.Components"
             xmlns:vm="clr-namespace:Olympus.ViewModel.Components"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:UserHandlerVM/>
    </UserControl.DataContext>
    
    <StackPanel Orientation="Horizontal">

        <Label Content="{Binding UserGreeting, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Content="{Binding ButtonString, UpdateSourceTrigger=PropertyChanged}" 
                Command="{Binding UserCommand}"
                CommandParameter="{Binding ButtonString}"/>

    </StackPanel>
</UserControl>
