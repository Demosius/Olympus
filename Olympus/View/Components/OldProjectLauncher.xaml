<UserControl x:Class="Olympus.View.Components.OldProjectLauncher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Olympus.View.Components"
             xmlns:vm="clr-namespace:Olympus.ViewModel.Components"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <ProjectLauncherVM xmlns="clr-namespace:Olympus.ViewModel.Components"/>
    </UserControl.DataContext>

    <TabControl ItemsSource="{Binding ProjectGroups}" 
                Padding="0"
                DisplayMemberPath="GroupName"
                Margin="5">
        <TabControl.Resources>
            <DataTemplate DataType="{x:Type vm:ProjectGroupVM}">
                <local:ProjectGroup DataContext="{Binding}"/>
            </DataTemplate>
        </TabControl.Resources>
        <!--<TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="Frank" />
            </DataTemplate>
        </TabControl.ItemTemplate>-->
        <!--<TabControl.ContentTemplate>
            <DataTemplate>
                <local:ProjectGroup DataContext="{Binding}"/>
            </DataTemplate>
        </TabControl.ContentTemplate>-->
    </TabControl>

</UserControl>
