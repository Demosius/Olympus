<UserControl x:Class="Olympus.View.Components.ProjectGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Olympus.View.Components"
             xmlns:vm="clr-namespace:Olympus.ViewModel.Components"
             mc:Ignorable="d" >
    
    <UserControl.DataContext>
        <vm:ProjectGroupVM/>
    </UserControl.DataContext>
    
    <ItemsControl ItemsSource="{Binding Projects}" Margin="5">
        <ItemsControl.Resources>
            <DataTemplate DataType="{x:Type vm:ProjectButtonVM}">
                <local:ProjectButton/>
            </DataTemplate>
        </ItemsControl.Resources>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <local:ProjectButton DataContext="{Binding}"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
    
</UserControl>
