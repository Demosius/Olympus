<Page x:Class="Pantheon.View.PantheonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PantheonPage"
      Background="#111">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Dark Theme -->
                <ResourceDictionary Source="../Themes/Metro/Dark/MetroDark.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="../Themes/Metro/Dark/MetroDark.MSControls.Toolkit.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <DockPanel>
        <TreeView DockPanel.Dock="Left"
                  MinWidth="100">
            <TreeViewItem Header="Employees">
                <TreeViewItem Header="Manage"/>
                <TreeViewItem Header="Create"/>
            </TreeViewItem>
            <TreeViewItem Header="Shifts"/>
            <TreeViewItem Header="Roster Management"/>
        </TreeView>
        <Button Content="This is a button."/>
    </DockPanel>
    
</Page>
